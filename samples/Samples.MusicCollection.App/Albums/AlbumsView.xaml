<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:albums="clr-namespace:Samples.MusicCollection.App.Albums"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Music Collection App"
             x:Class="Samples.MusicCollection.App.Albums.AlbumsView"
             x:DataType="albums:AlbumsViewModel">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
                 EventName="Loaded"
                 Command="{Binding InitiateCommand, Mode=OneTime}"
                 CommandParameter="{Binding Artist}"/>
    </ContentPage.Behaviors>

    <Grid RowDefinitions="50, *" RowSpacing="8" Margin="8">
        <CollectionView Grid.Row="1" ItemsSource="{Binding Albums, Mode=OneWay}">

        </CollectionView>
    </Grid>

</ContentPage>